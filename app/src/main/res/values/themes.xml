<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TokidosApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--    change action bar text color, the .Bridge is important    -->
        <item name="titleTextColor">@color/navy_blue</item>
<!--        <item name="colorControlNormal">@color/black</item>-->
<!--        <item name="actionBarStyle">@style/myActionBarTheme</item>-->
<!--        <item name="actionMenuTextColor">@color/black</item>-->
        <!--    change action bar back button color    -->
        <item name="actionBarTheme">@style/ToolbarCustomStyle</item>

        <item name="android:homeAsUpIndicator">@drawable/baseline_arrow_back_24</item>
    </style>
    <style name="ToolbarCustomStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/navy_blue</item>
    </style>
    <style name="myActionBarTheme" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/myActionBarTitle</item>
    </style>
    <style name="myActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SplashTheme" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/white</item>
<!--        <item name="windowSplashScreenAnimatedIcon">@mipmap/splash_logo</item>-->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.TokidosApplication</item>

    </style>
</resources>